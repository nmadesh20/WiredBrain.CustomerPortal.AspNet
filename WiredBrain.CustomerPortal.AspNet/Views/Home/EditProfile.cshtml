@model WiredBrain.CustomerPortal.Web.Models.ProfileModel

<div class="row mt-md-5">
    <h3>Edit your favorite drink so you can just order "the usual" at the counter.</h3>
</div>
<div class="row">
    @using (Html.BeginForm("EditFavorite", "Home", FormMethod.Post, new { style = "width:100%" }))

    {
        @Html.HiddenFor(m => m.LoyaltyNumber)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "w-100" })
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "w-100" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Zip)
            @Html.TextBoxFor(m => m.Zip, new { @class = "w-100" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City)
            @Html.TextBoxFor(m => m.City, new { @class = "w-100" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "w-100" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BirthDate)
            @Html.TextBoxFor(m => m.BirthDate, new { @class = "w-100" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AddLiquor)
            @Html.CheckBoxFor(m => m.AddLiquor, new { @class = "w-100" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Favorite)
            @Html.TextBoxFor(m => m.Favorite, new { @class = "w-100" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>